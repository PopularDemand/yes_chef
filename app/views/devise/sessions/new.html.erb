<% content_for(:background_color) { '#222' } %>

<div id="welcome-message" class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <h2 class='text-center'>Log into <span class="yes-chef" id="main-logo">Yes, Chef!</span></h2>
  <h5 class="text-center text-muted">It's great to see you again</h5>
</div>

<div class="demo-blocks col-md-3">
  <div class="well signup-well">
    <div class="text-center">
      <h4 class='well-title'>Test Drive as Chef:</h4>
      <p class='well-text'>Email: a@a.com</p>
      <p class='well-text'>Password: password</p>
    </div>
  </div>
  <div class="well signup-well">
    <div class="text-center">
      <h4 class='well-title'>Test Drive as Client:</h4>
      <p class='well-text'>Email: customer@email.com</p>
      <p class='well-text'>Password: password</p>
    </div>
  </div>
</div>

<div class="col-xs-12 col-md-6">
  <div class="well grey-well">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control", autofocus: true %>
      </div>

      <div class="field form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "form-control",  autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-block well-btn" %>
      </div>
    <% end %>

    <div class="form-links well-links">
      <%= render "devise/shared/links" %>
    </div>
    </div>
    </div>
</div>
