<% content_for :title, "Ingredients List" %>
<div class="new-ingredient-form col-sm-offset-2">
  <%= form_for @ingredient, html: { class: "form-inline" } do |f| %>
    <div class="form-group">
      <%= f.label :name, "Add an ingredient: ", class: 'text-red' %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <%= f.submit "+ Add", class: 'btn well-btn' %>
  <% end %>
</div>
<hr>
<div class="col-sm-2 col-sm-offset-4">
  <table class ="ingredient-table table table-striped table-bordered">
    <tr>
      <th>
        Ingredients
      </th>
    </tr>
    <%= render @ingredients %>
  </table>
</div>
