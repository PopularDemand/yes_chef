<h4 class='text-black'>Your most popular menu items</h4>
<table class="table table-striped table-bordered top-items-table">
  <tr>
    <th>
      Item Name
    </th>
    <th>
      Total Quantity Sold
    </th>
  </tr>
  <% menu_items.each do |menu_item| %>
    <tr class='item-row'>
      <td>
        <%= link_to menu_item.name, menu_item, class: 'red-link' %>
      </td>
      <td>
        <%= menu_item.order_items_count %>
      </td>
    </tr>
  <% end %>
</table>